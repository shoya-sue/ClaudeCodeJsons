{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Write(minimal/**)",
      "Write(standard/**)",
      "Write(full/**)",
      "Write(install.sh)",
      "Write(README.md)",
      "Write(CLAUDE.md)",
      "Write(CLAUDE.local.md)",
      "Write(*.json)",
      "Write(*.md)",
      "Write(.gitignore)",
      "Edit(**/*)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(wc *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(sort *)",
      "Bash(jq *)",
      "Bash(bash *)",
      "Bash(chmod *)",
      "Bash(diff *)",
      "mcp__*",
      "Skill(*)",
      "MCPSearch"
    ],
    "ask": [
      "Bash(git push *)"
    ],
    "deny": [
      "Read(**/.env.production)",
      "Read(**/secrets/**)",
      "Read(**/.aws/credentials)",
      "Read(**/.ssh/id_*)",
      "Write(**/.git/**)",
      "Bash(rm -rf /)",
      "Bash(sudo rm -rf *)",
      "Bash(git push --force origin main)",
      "Bash(git push --force origin master)"
    ]
  },
  "model": "claude-sonnet-4-6",
  "language": "japanese",
  "enableAllProjectMcpServers": true,
  "env": {
    "NODE_ENV": "development",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "MCP_TIMEOUT": "15000",
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "BASH_MAX_TIMEOUT_MS": "300000",
    "ENABLE_TOOL_SEARCH": "auto",
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "50"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Session started at $(date '+%Y-%m-%d %H:%M:%S')\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[PostToolUse] modified: $(jq -r '.tool_input.file_path' 2>/dev/null)\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Session stopped at $(date '+%Y-%m-%d %H:%M:%S')\"",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "excludedCommands": ["git", "gh"],
    "network": {
      "allowedDomains": ["github.com"]
    }
  },
  "teammateMode": "auto",
  "attribution": {
    "commit": "\n\nGenerated by Claude Code",
    "pr": "\nðŸ¤– Generated by [Claude Code](https://claude.ai/claude-code)"
  }
}
