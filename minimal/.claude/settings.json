{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(src/**)",
      "Read(tests/**)",
      "Read(docs/**)",
      "Read(README.md)",
      "Read(package.json)",
      "Read(tsconfig.json)",
      "Read(Cargo.toml)",
      "Read(go.mod)",
      "Read(pyproject.toml)",
      "Read(Makefile)",
      "Read(Dockerfile)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git show *)"
    ],
    "deny": [
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/.aws/**)",
      "Read(**/.ssh/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Write(**/*)",
      "Edit(**/*)",
      "Bash(rm *)",
      "Bash(sudo *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Skill(*)",
      "MCPSearch"
    ]
  }
}
