{
  "description": "Skills Development Configuration - Permissions for creating and managing Claude Code Skills",
  "allowedTools": [
    "view",
    "grep",
    "glob",
    "edit",
    "create",
    "bash",
    "web_fetch",
    "web_search",
    "report_progress",
    "code_review",
    "gh-advisory-database"
  ],
  "disallowedTools": [
    "write_bash",
    "read_bash",
    "stop_bash",
    "codeql_checker"
  ],
  "toolRestrictions": {
    "create": {
      "allowedDirectories": [
        "/skills/",
        "/.claude/skills/"
      ],
      "requiredFiles": [
        "SKILL.md",
        "skill.json"
      ]
    },
    "bash": {
      "allowedCommands": [
        "npm install",
        "npm test",
        "pip install",
        "pytest",
        "python -m",
        "node"
      ]
    }
  },
  "skillGuidelines": {
    "structure": {
      "manifestFile": "SKILL.md",
      "configFile": "skill.json",
      "maxSkillSize": 500000,
      "requiredSections": [
        "description",
        "capabilities",
        "tools",
        "examples"
      ]
    },
    "security": {
      "requireCodeReview": true,
      "requireTests": true,
      "disallowExternalExecution": true
    }
  },
  "notes": [
    "Specialized for developing Claude Code Skills",
    "Enforces skill structure and manifest requirements",
    "Code review required before skill activation",
    "Limited to safe development operations",
    "Skills should be portable and self-contained",
    "Test skills in isolated environment before deployment"
  ]
}
