{
  "description": "Skills Execution Configuration - Permissions for running activated Skills",
  "allowedTools": [
    "view",
    "grep",
    "glob",
    "bash",
    "task"
  ],
  "disallowedTools": [
    "edit",
    "create",
    "write_bash",
    "read_bash",
    "stop_bash"
  ],
  "toolRestrictions": {
    "bash": {
      "allowedCommands": [],
      "executionTimeout": 60000,
      "maxMemory": "512MB"
    },
    "task": {
      "allowedAgentTypes": ["explore", "task"],
      "maxConcurrent": 3
    }
  },
  "skillExecution": {
    "isolation": {
      "enabled": true,
      "restrictFileAccess": true,
      "restrictNetworkAccess": false
    },
    "monitoring": {
      "logExecution": true,
      "auditToolUsage": true,
      "trackResourceUsage": true
    },
    "limits": {
      "maxExecutionTime": 300000,
      "maxToolCalls": 100,
      "maxMemoryUsage": "1GB"
    }
  },
  "notes": [
    "Specialized for executing pre-approved Skills",
    "Enforces isolation and resource limits",
    "File modification is disabled",
    "Execution is logged and monitored",
    "Skills run with restricted permissions",
    "Use for production skill execution"
  ]
}
