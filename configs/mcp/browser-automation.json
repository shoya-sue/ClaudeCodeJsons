{
  "description": "MCP Browser Automation - Permissions for Playwright browser operations",
  "allowedTools": [
    "playwright-browser_navigate",
    "playwright-browser_click",
    "playwright-browser_type",
    "playwright-browser_fill_form",
    "playwright-browser_snapshot",
    "playwright-browser_take_screenshot",
    "playwright-browser_wait_for",
    "playwright-browser_hover",
    "playwright-browser_select_option",
    "playwright-browser_tabs",
    "playwright-browser_press_key"
  ],
  "disallowedTools": [
    "playwright-browser_evaluate",
    "playwright-browser_drag",
    "playwright-browser_file_upload",
    "playwright-browser_handle_dialog"
  ],
  "toolRestrictions": {
    "browser": {
      "allowedDomains": [],
      "disallowedDomains": [],
      "maxTabs": 10,
      "maxScreenshots": 50,
      "timeout": 30000
    },
    "security": {
      "blockJavaScriptEval": true,
      "restrictFileAccess": true
    }
  },
  "notes": [
    "Allows browser automation for testing and scraping",
    "JavaScript evaluation is disabled for security",
    "File upload and dialogs are restricted",
    "Suitable for UI testing and web scraping tasks",
    "Configure allowedDomains for additional security",
    "Use with caution in production environments"
  ]
}
