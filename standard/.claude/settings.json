{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(src/**)",
      "Read(tests/**)",
      "Read(docs/**)",
      "Read(README.md)",
      "Read(package.json)",
      "Read(tsconfig.json)",
      "Read(Cargo.toml)",
      "Read(go.mod)",
      "Read(pyproject.toml)",
      "Read(Makefile)",
      "Read(Dockerfile)",
      "Read(docker-compose*.yml)",
      "Read(.github/**)",
      "Write(src/**)",
      "Write(tests/**)",
      "Write(docs/**)",
      "Edit(src/**)",
      "Edit(tests/**)",
      "Edit(docs/**)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git show *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git checkout *)",
      "Bash(git stash *)",
      "Bash(npm run *)",
      "Bash(npm test *)",
      "Bash(npm install *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(bun *)",
      "Bash(npx *)",
      "Bash(pytest *)",
      "Bash(python -m *)",
      "Bash(cargo test *)",
      "Bash(cargo build *)",
      "Bash(cargo clippy *)",
      "Bash(go test *)",
      "Bash(go build *)",
      "Bash(make *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "mcp__context7__*",
      "mcp__playwright__*",
      "mcp__deepwiki__*",
      "mcp__github__*",
      "Skill(explain-code:*)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(npm publish *)"
    ],
    "deny": [
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/.aws/**)",
      "Read(**/.ssh/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Write(**/node_modules/**)",
      "Write(**/dist/**)",
      "Write(**/build/**)",
      "Write(**/.git/**)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(curl * | bash)",
      "Bash(wget * | bash)"
    ]
  },
  "model": "claude-sonnet-4-6",
  "enableAllProjectMcpServers": true,
  "env": {
    "NODE_ENV": "development",
    "MCP_TIMEOUT": "10000",
    "MAX_MCP_OUTPUT_TOKENS": "25000",
    "BASH_MAX_TIMEOUT_MS": "120000"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[PostToolUse] modified: $(jq -r '.tool_input.file_path' 2>/dev/null)\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Session stopped at $(date '+%Y-%m-%d %H:%M:%S')\"",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "attribution": {
    "commit": "\n\nGenerated by Claude Code",
    "pr": "\nðŸ¤– Generated by [Claude Code](https://claude.ai/claude-code)"
  }
}
